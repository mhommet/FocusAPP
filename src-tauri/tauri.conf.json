{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "FocusApp",
  "version": "1.6.7",
  "identifier": "com.focusapp.frontend",
  "build": {
    "frontendDist": "../src"
  },
  "bundle": {
    "active": true,
    "targets": ["nsis"],
    "icon": ["icons/32x32.png", "icons/128x128.png", "icons/icon.ico"],
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": ""
    }
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "label": "main",
        "title": "FocusApp - League of Legends Companion",
        "width": 1100,
        "height": 750,
        "minWidth": 900,
        "minHeight": 600,
        "resizable": true,
        "center": true,
        "devtools": true
      },
      {
        "label": "cs-overlay",
        "title": "CS Overlay",
        "url": "overlay.html",
        "width": 220,
        "height": 140,
        "x": 10,
        "y": 150,
        "resizable": false,
        "decorations": false,
        "transparent": true,
        "alwaysOnTop": true,
        "skipTaskbar": true,
        "visible": false,
        "focus": false
      }
    ],
    "security": {
      "csp": "default-src 'self'; script-src 'self' 'unsafe-inline'; style-src 'self' 'unsafe-inline' https://cdnjs.cloudflare.com; font-src 'self' https://cdnjs.cloudflare.com; img-src 'self' data: https://ddragon.leagueoflegends.com https://raw.communitydragon.org https://wiki.leagueoflegends.com; connect-src 'self' https://api.hommet.ch https://ddragon.leagueoflegends.com https://raw.communitydragon.org https://api.github.com"
    }
  },
  "plugins": {}
}
